<% if(errors.length > 0) { %>
<div class="row">
  <div class="col my-3">
    <div class="alert alert-danger">
      <% errors.forEach(error => { %>
        <%= error %> <br>
      <% }) %>
    </div>
  </div>
</div>
<% } %>

<% if(successes.length > 0) { %>
<div class="row">
  <div class="col my-3">
    <div class="alert alert-success">
      <% successes.forEach(success => { %>
        <%= success %> <br>
      <% }) %>
    </div>
  </div>
</div>
<% } %>